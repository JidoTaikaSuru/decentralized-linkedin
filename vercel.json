{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    },
    {
      "src": "frontend/app/dist/index.html",
      "use": "@vercel/node",
      "config": { "includeFiles": ["frontend/app/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/app/dist/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}