{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    },
    {
      "src": "frontend/app/dist/index.html",
      "use": "@vercel/node",
      "config": { "includeFiles": ["frontend-demo/app/dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "fronted/app/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "backend/dist/index.js"
    }
  ]
}